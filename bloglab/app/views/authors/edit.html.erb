<h1>Edit <%= @author.first_name + " " + @author.last_name %></h1>
<p>
  <% if @author.errors.any? %>
    <% @author.errors.full_messages.each do |error| %>
      <%= error %>
    </p>
    <% end %>
  <% end %>
</p>

<%= form_for @author do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  
  <p>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </p>

  <%= f.submit %>
<% end %>

<p>
  <%= link_to "Destoy Author", author_path, method: "DELETE", data: {confirm: "Are you sure you want to delete " + @author.first_name + " " + @author.last_name} %>
</p>

