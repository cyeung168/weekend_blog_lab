<%= render "partials/header" %>
<div class="page-header">
  <h1>Edit <%= @post.title %></h1>
</div>

<div class="col-lg-6">
<%= form_for @post, class: "form-horizontal" do |f| %>
  <div class="well bs-component">
  <fieldset>
  <legend>
  Whoa! Credible writes only, this isn't TMZ!
  </legend>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", autofocus: true %>
  </p>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </p>
  
  <p>
    <%= f.label :category %>
    <%= f.text_field :category, class: "form-control" %>
  </p>

  <p>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </p>

  <p>
    <%= link_to "Delete Post Entry", post_path, method: "DELETE", data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-danger" %>
  </p>
  </fieldset>
  </div>
<% end %>

<ul class="pager">
    <li class="previous"><%= link_to '← Back', url_for(:back) %></li>
  </ul>
</div>

<div class="col-lg-6">
    <% if @post.errors.any? %>
      <div class="panel panel-danger">
        
      <div class="panel-heading">
          <h3 class="panel-title">Errors</h3>
      </div>
        <div class="panel-body">
        <ul>
          <% @post.errors.full_messages.each do |error| %>
            <li>
              <%= error %>
            </li>
          <% end %>
        </ul>
        </div>

      </div>
    <% end %>
</div> 




<%= render "partials/footer" %>